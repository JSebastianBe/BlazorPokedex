@using Models

@if(Pokemons == null || !Pokemons.Any())
{
    <p>Cargando...</p>
}
else
{
    <div>
        @for(int i = 0; i<NumberOfRows; i++){
            <div class="row">
                @foreach(var pokemon in Pokemons.Skip(i * NumberOfRows).Take(NumberOfRows))
                {
                    <div class="card pokeCard mb-4 bg-@(pokemon.Types.FirstOrDefault().Types.Name ?? "normal")">
                        <div class="card-body">
                            <h4 class="card-title">@pokemon.Name.Substring(0,1).ToUpper()@pokemon.Name.Substring(1)</h4>
                            <img src="@pokemon.Sprites.FrontDefault" alt="@pokemon.Name" />
                        </div>
                        <div class="moreinfo">
                            <span class="badge border rounded-pill 
                                    bg-@(pokemon.Types.FirstOrDefault().Types.Name ?? "normal")">
                                    <a href="/pokeDetails/@pokemon.Name">Ver más</a>
                            </span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}
@code {
    [Parameter]
    public IEnumerable<Pokemon> Pokemons { get; set; }
    [Parameter]
    public int NumberOfRows { get; set; }
}
